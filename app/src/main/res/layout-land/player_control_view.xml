<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#66000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/video_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:background="@drawable/transparent_circle_background"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:id="@+id/video_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:layout_marginEnd="50dp"
                android:maxLines="2"
                android:text="@string/title"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playback_speed"
                android:padding="10dp"
                android:src="@drawable/ic_speed"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/audio_track"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_audio_track"
                android:background="@drawable/transparent_circle_background"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/exo_subtitle_track"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/transparent_circle_background"
                android:src="@drawable/ic_subtitle_track"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_playlist"
                android:id="@+id/playlist"
                android:padding="10dp"
                android:background="@drawable/transparent_circle_background"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/todo" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <!--        <include layout="@layout/swipe_zoom_design" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#66000000"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/exo_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/_5555"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/exo_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:text="@string/_5555"
                    android:textColor="@android:color/white" />

                <androidx.media3.ui.DefaultTimeBar
                    android:id="@+id/exo_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/exo_duration"
                    android:layout_toEndOf="@+id/exo_position"
                    app:played_color="?attr/colorPrimary"
                    app:scrubber_drawable="@drawable/scrubber" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bottom_icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="7">

                <ImageView
                    android:id="@+id/lock"
                    android:layout_width="24dp"
                    android:background="@drawable/transparent_circle_background"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_lock_open" />

                <ImageView
                    android:id="@+id/exo_rew"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/rewind_back" />

                <ImageView
                    android:id="@+id/exo_prev"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_skip_prev" />

                <ImageView
                    android:id="@+id/exo_play_pause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_play" />


                <ImageView
                    android:id="@+id/exo_next_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_skip_next" />

                <ImageView
                    android:id="@+id/exo_ffwd"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/rewind_forward" />

                <ImageView
                    android:id="@+id/scaling"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_fit_screen" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/unlock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        tools:visibility="visible"
        android:padding="10dp"
        android:background="@drawable/transparent_circle_background"
        android:scaleType="centerInside"
        android:src="@drawable/ic_lock"
        android:visibility="gone" />


</RelativeLayout>
