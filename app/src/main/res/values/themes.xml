<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light theme -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="android:windowLayoutInDisplayCutoutMode" >shortEdges</item>
        <item name="colorTertiaryContainer">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorLightDark</item>
        <item name="colorPrimaryDark">@color/colorLightDark1</item>
        <item name="colorTertiary">@color/colorLightDark2</item>
        <item name="colorTertiaryFixedDim">@color/colorLightDark3</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Add other light theme attributes -->


    </style>
    <style name="activity_player">
        <item name="android:windowLayoutInDisplayCutoutMode">
            shortEdges <!-- default, shortEdges, or never -->
        </item>
    </style>
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>

    </style>
</resources>